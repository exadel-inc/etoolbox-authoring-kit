{
  "name": "eak-website",
  "version": "2.2.0",
  "description": "EAK website package definition",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:prepare && concurrently --kill-others \"npm:watch:content\" \"npm:watch:less\" \"npm:watch:ts\" \"npm:watch:eleventy\"",
    "build": "npm run clean && npm run build:prepare && concurrently \"npm:build:less\" \"npm:build:ts\" && npm run build:eleventy",
    "clean": "rimraf dist/**",
    "build:prepare": "node \"build/copy.js\"",
    "build:eleventy": "npx @11ty/eleventy -- --env=production",
    "build:less": "lessc \"src/site.less\" \"dist/bundles/site.css\"",
    "build:ts": "webpack --mode=production",
    "watch:content": "chokidar \"../content/**/*\" -c \"npm run build:prepare\"",
    "watch:eleventy": "npx @11ty/eleventy --serve --port=3005 -- --env=development",
    "watch:less": "chokidar --initial \"**/*.less\" -c \"npm run build:less\"",
    "watch:ts": "webpack --watch",
    "lint": "concurrently \"npm:lint:js\" \"npm:lint:css\" \"npm:lint:spaces\"",
    "lint:js": "eslint \"src/**/*.{ts,js}\" --max-warnings 3",
    "lint:css": "stylelint \"src/**/*.less\"",
    "lint:spaces": "lintspaces \"./{src,views,controller}/**/*.{html,less,json}\" -n -t -d spaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@exadel/esl": "4.0.0-beta.9",
    "@juggle/resize-observer": "^3.3.1",
    "@webcomponents/custom-elements": "1.5.0",
    "@webcomponents/webcomponents-platform": "1.0.1",
    "intersection-observer": "^0.12.2",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.28.0",
    "promise-polyfill": "^8.2.3",
    "rss-parser": "^3.12.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.0",
    "concurrently": "^7.2.2",
    "del": "^6.1.1",
    "eslint": "^8.19.0",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "foreach-cli": "^1.8.1",
    "glob": "^8.0.3",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^20.0.0",
    "kleur": "^4.1.5",
    "less": "^4.1.3",
    "lintspaces-cli": "^0.7.1",
    "markdown-it-anchor": "^8.6.4",
    "minimatch": "^5.1.0",
    "postcss": "^8.4.14",
    "postcss-less": "^6.0.0",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "ts-loader": "^9.3.1",
    "typescript": "4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "browserslist": [
    "last 3 versions",
    "> 1%",
    "not dead"
  ]
}
