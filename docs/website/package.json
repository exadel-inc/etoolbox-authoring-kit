{
  "name": "AEK",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:prepare && concurrently --kill-others \"npm run watch:content\" \"npm run watch:less\" \"npm run watch:ts\" \"npm run watch:eleventy\"",
    "build": "npm run clean && npm run build:prepare && concurrently \"npm run build:less\" \"npm run build:ts\" && \"npm run build:eleventy\"",
    "clean": "rimraf dist/**",
    "build:prepare": "npm run build:prepare:copy && npm run build:prepare:frontmeter",
    "build:prepare:copy": "copyfiles -u 2 ../content/* views/content",
    "build:prepare:frontmeter": "replace \"(^)(<!---|--->)\" \"$1---\" ./views/content -r --include=\"*.md\"",
    "build:eleventy": "npx @11ty/eleventy -- --env=production",
    "build:less": "lessc src/localdev.less dist/bundles/localdev.css",
    "build:ts": "webpack --mode=production",
    "watch:content": "chokidar \"../content/*\" -c \"npm run build:prepare\"",
    "watch:eleventy": "npx @11ty/eleventy --serve --port=3005 -- --env=development",
    "watch:less": "chokidar --initial \"**/*.less\" -c \"npm run build:less\"",
    "watch:ts": "webpack --watch",
    "lint": "concurrently \"npm run lint:js\" \"npm run lint:css\" \"npm run lint:spaces\"",
    "lint:js": "eslint src/**/*.{ts,js} --max-warnings 3",
    "lint:css": "stylelint src/**/*.less",
    "lint:spaces": "lintspaces ./{src,views,controller}/**/*.{html,less,json} -n -t -d spaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@exadel/esl": "^3.13.2",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^19.0.0",
    "prismjs": "^1.27.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@juggle/resize-observer": "^3.3.1",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@webcomponents/custom-elements": "1.5.0",
    "@webcomponents/webcomponents-platform": "1.0.1",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.5.0",
    "concurrently": "^6.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "foreach-cli": "^1.8.1",
    "html-minifier": "^4.0.0",
    "intersection-observer": "^0.12.0",
    "less": "^4.1.2",
    "lintspaces-cli": "^0.7.1",
    "postcss": "^8.4.6",
    "postcss-less": "^5.0.0",
    "promise-polyfill": "^8.2.1",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^14.5.1",
    "ts-loader": "^9.2.6",
    "typescript": "4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  }
}
