<header class="header">
  <nav class="header-container container">
    <a class="header-link header-logo logo-animated" href="{{ '/' | url }}" aria-label="landing page">
      {% include "static/assets/helpers/icon.svg" %}
      <span class="header-short-name">Exadel Authoring Kit</span>
      <span class="header-long-name">{{ site.brand }}</span>
    </a>
    <ul class="header-links unstyled-list">
      <li class="header-item">
        <a class="header-link" href="{{ landing.urls.installationUrl | url }}">Manuals</a>
      </li>
      <li class="header-item">
        <a class="header-link" href="{{ landing.urls.docsUrl }}" target="_blank">API Docs</a>
      </li>
      <li class="header-item">
        <a class="header-link" href="{{ landing.urls.articleExadelUrl }}" target="_blank">Blog</a>
      </li>
      <li class="header-item">
        <a class="header-link fill-primary" href="{{ site.github.url }}" target="_blank">
          {% include "static/assets/helpers/github.svg" %}
        </a>
      </li>
    </ul>
    <div class="header-utility">
      <esl-trigger class="header-hamburger" target="#sidebar" aria-label="navigation menu"></esl-trigger>
    </div>
  </nav>
</header>
