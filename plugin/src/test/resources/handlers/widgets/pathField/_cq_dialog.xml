<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="cq/gui/components/authoring/dialog"
          jcr:title="PathField Widget Dialog">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <path jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                          name="./path"
                          deleteHint="{Boolean}false"
                          disabled="{Boolean}false"
                          droppable="{Boolean}true"
                          fieldLabel="Edit path"
                          filter="nosystem"
                          multiple="{Boolean}true"
                          emptyText="Path goes here"
                          renderHidden="{Boolean}false"
                          required="{Boolean}false"
                          rootPath="/content"
                          suggestionSrc="suggestion"/>
                    <path2 jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                           name="./path2"
                           disabled="{Boolean}false"
                           fieldLabel="Edit path 2"
                           forceSelection="{Boolean}true"
                           emptyText="Path goes here"
                           pickerSrc="picker"
                           renderHidden="{Boolean}false"
                           required="{Boolean}false"
                           rootPath="/content/dam"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
